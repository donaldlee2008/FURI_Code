<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/buttonLP2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonLP1"
        android:layout_alignBottom="@+id/buttonLP1"
        android:layout_alignParentRight="true"
        android:text="@string/load_picture_2" />
    
    <Button
        android:id="@+id/buttonIMP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/buttonLP1"
        android:layout_below="@+id/buttonLP1"
        android:layout_marginTop="23dp"
        android:text="@string/load_image_plus_1" />

    <Button
        android:id="@+id/buttonIMP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonIMP1"
        android:layout_alignBottom="@+id/buttonIMP1"
        android:layout_alignLeft="@+id/buttonLP2"
        android:layout_alignParentRight="true"
        android:text="@string/load_image_plus_2" />

    <Button
        android:id="@+id/buttonCALC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:text="@string/calculate" />

    <Button
        android:id="@+id/buttonLP1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:text="@string/load_picture_1" />

    <Spinner
        android:id="@+id/operations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinner1"
        android:layout_toLeftOf="@+id/buttonIMP2"
        android:layout_toRightOf="@+id/buttonIMP1" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinner1"
        android:layout_toRightOf="@+id/buttonCALC" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonCALC"
        android:layout_marginBottom="22dp"
        android:layout_toLeftOf="@+id/operations" />
    
</RelativeLayout>